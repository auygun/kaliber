config("third_party_config") {
  include_dirs = [
    "vulkan/include",
    "glslang",
  ]

  if (target_os == "linux") {
    defines = [ "VK_USE_PLATFORM_XLIB_KHR" ]
  }

  if (target_os == "win") {
    defines = [ "VK_USE_PLATFORM_WIN32_KHR" ]
  }
}

