  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/linux/gltest_x86_64_debug",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/linux",
      "environment": [],
      "console": "externalTerminal",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}